{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./client",
    "rootDir": "./client",

    "resolvePackageJsonExports": false,
    "resolvePackageJsonImports": false
  },
  "include": ["client/**/*"],
  "exclude": ["node_modules", "dist", "server"]
}