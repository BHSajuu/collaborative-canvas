{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES6"] 
  },
  "include": ["server/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}